<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.memorygame.MainActivity">

    <Button
        android:id="@+id/AddImage"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Dodaj zdjecie"
        app:layout_constraintTop_toBottomOf="@+id/nameCatagory"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="169dp"
        android:layout_height="127dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/AddImage"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="76dp" />

    <Button
        android:id="@+id/addCategory"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dodaj Kategoria"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/nameCatagory"
        android:layout_width="304dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="nazwaKategorii"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <TextView
        android:id="@+id/countCategory"
        android:layout_width="309dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/addCategory"
        tools:layout_editor_absoluteX="6dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/clearBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Usun"
        app:layout_constraintTop_toBottomOf="@+id/showCategory"
        tools:layout_editor_absoluteX="53dp" />

    <Button
        android:id="@+id/showCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="PokaÅ¼ kategorie"
        app:layout_constraintTop_toBottomOf="@+id/countCategory"
        tools:layout_editor_absoluteX="33dp" />

    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Graj"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="224dp" />
</android.support.constraint.ConstraintLayout>
